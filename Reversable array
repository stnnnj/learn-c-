#include <iostream>
using namespace std;
//input, display, reverse, sum of pointers, max

int main(){
    int n;
    cout << "Enter size: ";
    cin >> n;
    int *p = new int[n];
    
    // input
    for(int i = 0; i < n; i++){
        cout << "Enter a number: ";
        cin >> *(p + i);
    }

    // reverse
    int *start = p;               // * used to access value
    int *end = p + n - 1;         // no * used here, just pointing to address
    
    while(start < end){
        int temp = *start;
        *start = *end;
        *end = temp;
        
        start++;
        end--;
    }

    // display
    cout << "You entered: ";
    for(int i = 0; i < n; i++){
        cout << *(p + i) << " ";
    }
}
